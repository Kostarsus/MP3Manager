<Window x:Class="Dargoskop.windows.ErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorMessage" Height="600" Width="900">
    <StackPanel Orientation="Vertical">
        <TextBox Name="errorMessage" IsReadOnly="true" TextWrapping="WrapWithOverflow"/>
        <TextBox Name="errorDetail" MinHeight="150" ScrollViewer.CanContentScroll="true" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="true" TextWrapping="WrapWithOverflow"/>
        <Button Name="ok" Width="30" Click="ok_Click">Ok</Button>
    </StackPanel>
</Window>
