<Window x:Class="MP3ManagerBase.UnhandledError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UnhandledError" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Left" Margin="10">
        <Label >Es ist ein nicht behandelter Fehler aufgetreten!</Label>
        <TextBox Name="message" Width="750" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        <TextBox Name="stacktrace" Width="750" Height="300" TextWrapping="Wrap" FontSize="10" FontFamily="Arial" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
    </StackPanel>
</Window>
